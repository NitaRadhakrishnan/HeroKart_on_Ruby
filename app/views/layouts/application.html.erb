<!DOCTYPE html>
<html>
  <head>
    <title>Storemanagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <h1>HeroKart</h1>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>  

  <% if current_user %>
      <%= link_to 'Home', items_path %>    
      <%= link_to 'My Cart', carts_path %>
      <%= link_to 'My Wishlist', wishlists_path %>
      <%= link_to 'Edit Profile',edit_user_registration_path %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
  <% elsif current_admin %>
      <%= link_to 'Home', items_path %>    
      <%= link_to 'My Cart', carts_path %>
      <%= link_to 'My Wishlist', wishlists_path %>
      <%= link_to 'Show all admin tasks', admin_show_path %>
      <%= link_to 'Edit Profile',edit_admin_registration_path %>
      <%= link_to 'Logout', destroy_admin_session_path, method: :delete %>
  <% else %>
      <%= link_to 'Login as Customer', new_user_session_path %> 
      <%= link_to 'Login as admin', new_admin_session_path %> 
      <%= link_to 'Home', items_path %>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
  <% end %>

  <%= yield %>
  </body>
  </html>